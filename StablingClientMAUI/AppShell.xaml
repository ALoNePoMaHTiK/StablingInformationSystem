<Shell
    x:Class="StablingClientMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:StablingClientMAUI"
    xmlns:v="clr-namespace:StablingClientMAUI.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="StablingClientMAUI">

    <TabBar>
        <Tab Title="Клиенты"
            Icon="clients.svg">
            <ShellContent ContentTemplate="{DataTemplate v:ClientsPage}"/>
        </Tab>
        <Tab Title="Типы тренировок"
            Icon="money.svg">
            <ShellContent ContentTemplate="{DataTemplate v:TrainingTypesPage}"/>
        </Tab>
    </TabBar>
