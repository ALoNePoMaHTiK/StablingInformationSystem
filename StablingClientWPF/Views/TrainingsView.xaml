<UserControl x:Class="StablingClientWPF.Views.TrainingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StablingClientWPF.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:StablingClientWPF.ViewModels"
             d:DataContext="{d:DesignInstance vm:TrainingsViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DatePicker
              Style="{StaticResource MaterialDesignOutlinedDatePicker}"
              SelectedDate="{Binding CurrentDate}"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Height="50" HorizontalAlignment="Center">
            <Button Content="Добавить" Command="{Binding OpenCreateTrainingCommand}"/>
            <Button Content="Обновить" Command="{Binding GetTrainingsCommand}"/>
        </StackPanel>

        <ListView Grid.Row="2" x:Name="TrainingsListView" ItemsSource="{Binding Trainings, IsAsync=True}">
            <ListView.View>
                <GridView ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <GridViewColumn DisplayMemberBinding="{Binding TrainingId}">№</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding TypeName}">Тип</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding TrainerName}">Тренер</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding ClientName}">Клиент</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding HorseName}">Лошадь</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding TrainingStart, StringFormat=HH-mm}">Начало</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding TrainingFinish, StringFormat=HH-mm}">Конец</GridViewColumn>
                    <GridViewColumn>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Menu materialDesign:MenuAssist.TopLevelMenuItemHeight="25">
                                    <MenuItem Icon="{materialDesign:PackIcon Kind=Settings}">
                                        <MenuItem Command="{Binding ElementName=TrainingsListView,
                                              Path=DataContext.OpenEditTrainingCommand}"
                                              CommandParameter="{Binding TrainingId}"
                                              Header="Изменить"
                                              Icon="{materialDesign:PackIcon Kind=Edit}"/>
                                        <MenuItem Command="{Binding ElementName=TrainingsListView,
                                              Path=DataContext.OpenCopyTrainingCommand}"
                                              CommandParameter="{Binding TrainingId}"
                                              Header="Копировать"
                                              Icon="{materialDesign:PackIcon Kind=ContentCopy}"/>
                                        <MenuItem Command="{Binding ElementName=TrainingsListView,
                                              Path=DataContext.DeleteTrainingCommand}"
                                              CommandParameter="{Binding TrainingId}"
                                              Header="Удалить"
                                              Foreground="Crimson"
                                              Icon="{materialDesign:PackIcon Kind=Delete}"/>
                                    </MenuItem>
                                </Menu>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
