<Window x:Class="StablingClientWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StablingClientWPF"
        xmlns:vm="clr-namespace:StablingClientWPF.ViewModels"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="650" Width="800">
    <StackPanel>
        <ListView Name="clientsList" ItemsSource="{Binding Clients}" >
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding ClientId}">№</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding FullName}">ФИО</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding PhoneNumber}">Номер телефона</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Balance}">Баланс</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Email}">Email</GridViewColumn>
                    <GridViewColumn>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Command="{Binding ElementName=clientsList, Path=DataContext.OpenEditClientCommand}"
                                        CommandParameter="{Binding ClientId}">
                                    <Image Source="/Icons/EditIcon.png" Width="20" Height="20"/>
                                </Button>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Command="{Binding ElementName=clientsList, Path=DataContext.DiactivateClientCommand}"
                                        CommandParameter="{Binding ClientId}">
                                    <Image Source="/Icons/Deactivate.png" Width="20" Height="20"/>
                                </Button>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Добавить" Command="{Binding OpenCreateClientCommand}"/>
        <Button Content="Обновить" Command="{Binding GetClientsCommand}"/>
    </StackPanel>
</Window>
